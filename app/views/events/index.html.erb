<div class="row ml-0 mt-3">
  <h2>Events</h2>
</div>
<div class="row ml-0 mt-2">
  <p>We've got plenty of exciting events for you!</p>
</div>
<div class="row ml-0 mt-2 mb-3">
  <div class="col-2">
    <%= link_to "Add Event", new_event_path, class: ["btn", "btn-primary"] %>
  </div>
</div>
<div class="row">
  <% @events.each do |event| %>
   <%= render partial: 'event_tile', locals: { event: event } %>
  <% end %>
</div>