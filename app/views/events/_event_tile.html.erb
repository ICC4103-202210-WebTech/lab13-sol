<div class="col-md-4 mb-3">
  <div class="card shadow-sm">
    <%= link_to image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef"), url_for(event) %>
    <div class="card-body">
        <p class="card-text"><%= link_to event.name, event %></p>
        <p class="card-text"><%= event.event_venue.name %></p>
        <p class="card-text"><%= event.start_date %></p>
        <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", event %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_event_path(event) %></button>
        </div>
        <small class="text-muted"><%= "#{(event.start_date.to_date - DateTime.now.to_date).to_i} days left!" %></small>
      </div>
    </div>
  </div>
</div>